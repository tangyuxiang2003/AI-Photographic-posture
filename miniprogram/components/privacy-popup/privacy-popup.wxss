/* 隐私协议弹窗样式 */
.privacy-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
}

.privacy-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.privacy-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  box-sizing: border-box;
}

.privacy-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 32rpx;
}

.privacy-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 24rpx;
  text-align: justify;
}

.privacy-link {
  color: #1890FF;
  text-decoration: underline;
}

.privacy-desc {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin: 32rpx 0 16rpx;
}

.privacy-list {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.privacy-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 8rpx;
}

.privacy-item:last-child {
  margin-bottom: 0;
}

.privacy-buttons {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
}

.privacy-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
  padding: 0;
}

.reject-btn {
  background: #f5f5f5;
  color: #666;
}

.agree-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.privacy-btn::after {
  border: none;
}