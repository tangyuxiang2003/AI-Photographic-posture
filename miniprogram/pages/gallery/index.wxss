.gallery-container {
  width: 100%;
  height: 100vh;
  /* background 由 inline style 动态设置 */
  display: flex;
  flex-direction: column;
}

/* 搜索框 */
.search-bar {
  position: relative;
  margin: 20rpx 24rpx;
  background: #fff;
  border-radius: 48rpx;
  padding: 20rpx 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.search-input {
  width: 100%;
  font-size: 28rpx;
  color: #333;
  padding-right: 60rpx;
}

.search-input::placeholder {
  color: #999;
}

.search-icon {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  cursor: pointer;
  transition: opacity 0.3s;
}

.search-icon:active {
  opacity: 0.6;
}

/* 快捷搜索标签 */
.quick-tags {
  background: #fff;
  padding: 16rpx 24rpx 8rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.quick-tags-scroll {
  white-space: nowrap;
}

.quick-tag-item {
  display: inline-block;
  padding: 10rpx 24rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
  background: linear-gradient(135deg, #FFF5E6 0%, #FFE8CC 100%);
  border: 1rpx solid #FFD699;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #FF8C00;
  transition: all 0.3s;
}

.quick-tag-item:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #FFE8CC 0%, #FFD699 100%);
}

/* 姿势列表 */
.pose-list {
  flex: 1;
  padding-bottom: 20rpx;
}

/* 分区样式 */
.pose-section {
  margin-bottom: 32rpx;
  background: #fff;
  padding: 24rpx 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx 20rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 12rpx;
}

.section-emoji {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.view-all {
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.arrow {
  margin-left: 4rpx;
  font-weight: bold;
}

/* 姿势网格 */
.pose-grid {
  display: flex;
  gap: 16rpx;
  padding: 0 24rpx;
}

/* 姿势卡片 */
.pose-item {
  position: relative;
  width: calc((100% - 16rpx) / 2);
  height: 420rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #f0f0f0;
}

/* 收藏按钮 */
.favorite-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 56rpx;
  height: 56rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  backdrop-filter: blur(8rpx);
  transition: all 0.3s;
}

.favorite-btn:active {
  transform: scale(0.9);
  background: rgba(0, 0, 0, 0.6);
}

.favorite-icon {
  width: 32rpx;
  height: 32rpx;
}

.pose-image {
  width: 100%;
  height: 100%;
}

.pose-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.5), transparent);
}

.use-btn {
  width: 60%;
  background: linear-gradient(135deg, #FFB800 0%, #FFA000 100%);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  padding: 16rpx 0;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(255, 160, 0, 0.3);
}

/* 空状态 */
.empty-state {
  padding: 120rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
