page { background: #FFF7FA; }
.wrap { 
  padding: 32rpx; 
  color: #7A3F60; 
  font-size: 28rpx; 
  min-height: 100vh; 
  box-sizing: border-box;
  /* background 由 inline style 动态设置 */
}

.header-bar{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}
.page-title{
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
}
.stats-text{ 
  color: #666666; 
  font-size: 26rpx;
}
.stats-num{
  color: #FF8EC6;
  font-weight: 600;
}

.tabs{
  display:flex; gap: 16rpx; padding: 8rpx 0 16rpx; margin-bottom: 8rpx;
  white-space:nowrap;
}
.tab{
  display:inline-flex; align-items:center; justify-content:center;
  padding: 12rpx 24rpx; border-radius: 999rpx; background:#FFE7EE; color:#A8476B; font-size:24rpx;
  border:2rpx solid #F7C8D9;
}
.tab.active{ background:#F78FB3; color:#fff; border-color:#F78FB3; }

.search-bar{
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}
.search-input{
  flex: 2;
  height: 80rpx; 
  background: #FFFFFF; 
  border: none; 
  border-radius: 50rpx;
  padding: 0 32rpx; 
  font-size: 26rpx; 
  color: #333333;
  box-sizing: border-box;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}
.search-input::placeholder{
  color: #999999;
}
.refresh-btn{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 24rpx; 
  height: 80rpx;
  flex: 1;
  border-radius: 50rpx; 
  border: none;
  background: linear-gradient(135deg, #FFB6D9 0%, #FF8EC6 100%);
  color: #FFFFFF; 
  font-size: 26rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(255, 182, 217, 0.25);
  white-space: nowrap;
}
.refresh-icon{
  width: 28rpx;
  height: 28rpx;
  flex-shrink: 0;
}

.card-list{ display:flex; flex-direction:column; gap: 20rpx; }
.card{
  background:#fff; border-radius: 20rpx; overflow:hidden; box-shadow: 0 6rpx 14rpx rgba(248, 143, 179, 0.08);
  border: 2rpx solid #F4D9E1;
}
.cover{ width:100%; height: 360rpx; object-fit: cover; }

.info{ padding: 20rpx; }

.tags{ display:flex; flex-wrap:wrap; gap: 12rpx; margin-bottom: 16rpx; align-items: center; }
.tag-label{
  font-size: 24rpx;
  color: #B07497;
  font-weight: 600;
  margin-right: 4rpx;
}
.tag{
  padding: 8rpx 16rpx; background:#FFE7EE; color:#A8476B; border-radius: 999rpx; font-size:22rpx;
  border:2rpx solid #F7C8D9;
}
.tag-empty{
  font-size: 22rpx;
  color: #D4A5C0;
  font-style: italic;
}
.actions{ display:flex; gap: 12rpx; }
.btn{
  flex:1; height:72rpx; display:flex; flex-direction: row; align-items:center; justify-content:center; border-radius: 999rpx; font-size:24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  gap: 6rpx;
  padding: 0 16rpx;
  white-space: nowrap;
}
.btn-icon{
  width: 28rpx;
  height: 28rpx;
  flex-shrink: 0;
}
.btn text{
  flex-shrink: 0;
}
.btn.unfav{ 
  background:#FFFFFF; 
  color:#333333; 
  border:2rpx solid #E5E5E5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}
.btn.share{ 
  background: linear-gradient(135deg, #FFB6D9 0%, #FF8EC6 100%);
  color:#FFFFFF;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 182, 217, 0.25);
  font-size: 28rpx;
}
.btn.edit{ 
  background:#FFFFFF; 
  color:#333333; 
  border:2rpx solid #E5E5E5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.empty{
  background:#fff; border-radius:20rpx; padding: 40rpx; text-align:center; color:#8C5676;
  border: 2rpx solid #F4D9E1; box-shadow: 0 6rpx 14rpx rgba(248, 143, 179, 0.06);
}
.empty-title{ font-size: 30rpx; font-weight:600; margin-bottom: 8rpx; }
.empty-tip{ font-size: 24rpx; color:#B07497; margin-bottom: 20rpx; }
.go-home{
  height: 76rpx; display:flex; align-items:center; justify-content:center; border-radius: 999rpx;
  background:#F78FB3; color:#fff; font-size:26rpx;
}

/* 标签编辑弹层 */
.mask{
  position: fixed; inset: 0; background: rgba(0,0,0,0.5); z-index: 999;
}
.sheet{
  position: fixed; left: 0; right: 0; bottom: 0; z-index: 1000;
  background: #fff; border-top-left-radius: 20rpx; border-top-right-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 -6rpx 14rpx rgba(248, 143, 179, 0.08);
  border-top: 2rpx solid #F4D9E1;
  max-height: 50vh;
}
.sheet-title{ font-size: 30rpx; color:#8C5676; font-weight:600; margin-bottom: 8rpx; }
.sheet-tip{ font-size: 22rpx; color:#B07497; margin-bottom: 16rpx; }
.sheet-input{
  width: 100%; height: 76rpx; border:2rpx solid #F4D9E1; border-radius: 12rpx; padding: 0 20rpx;
  font-size: 26rpx; color:#7A3F60; background:#FFF7FA; margin-bottom: 20rpx;
}
.sheet-actions{ display:flex; gap: 16rpx; }
.sheet-btn{
  flex:1; height: 72rpx; display:flex; align-items:center; justify-content:center; border-radius: 12rpx; font-size: 26rpx;
}
.sheet-btn.cancel{ background:#FFF1F6; color:#A8476B; border:2rpx solid #F7C8D9; }
.sheet-btn.save{ background:#F78FB3; color:#fff; }