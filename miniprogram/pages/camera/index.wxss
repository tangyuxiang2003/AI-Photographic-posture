/* camera.wxss */
.camera-container {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
  background-color: #000;
}

.camera-preview {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

/* 顶部控制区域 */
.top-controls {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 12vh; /* 底部区域的一半高度 */
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
}

.top-controls-inner {
  width: 80%;
  height: 80%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.control-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.control-icon image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.timer-text {
  color: white;
  font-size: 24rpx;
}

/* 底部控制区域 */
.bottom-controls {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 24vh; /* 顶部区域的两倍高度 */
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 10;
  display: flex;
  justify-content: space-between; /* 左右两侧对齐，快门绝对居中覆盖 */
  align-items: center;
  padding: 0 60rpx; /* 左右留边距 */
}

/* 快门按钮（绝对居中到底部黑色区域） */
.shutter-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 8rpx solid white;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;

  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%) translateX(-28px);
  z-index: 20;
}

/* 左侧容器 */
.left-actions {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

/* 右侧容器 */
.right-actions {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

/* 相册按钮（左侧，圆形且文字居中） */
.album-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 4rpx solid white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.album-btn text {
  color: #fff;
  font-size: 24rpx;
  line-height: 1;
}

/* 镜头反转按钮（右侧，圆形且图标居中） */
.switch-camera {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 4rpx solid white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.switch-camera image {
  width: 36rpx; /* 图标置于圆形按钮中心，适当缩小以留白 */
  height: 36rpx;
}





