.preview-page {
  width: 100%;
  min-height: 100vh;
  background: #000;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.preview-image {
  width: 100%;
  background: #000;
}
.bottom-bar {
  position: fixed;
  left: 0; right: 0; bottom: 0;
  height: 120rpx;
  background: rgba(0,0,0,0.7);
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0 24rpx;
}
.bar-btn {
  color: #fff;
  border: 2rpx solid rgba(255,255,255,0.9);
  background: rgba(255,255,255,0.12);
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
}