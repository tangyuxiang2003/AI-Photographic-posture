<view class="category-detail-container">
  <!-- 标题 -->
  <view class="category-header" style="padding-top: {{headerHeight}}px;">
    <view class="back-btn" bindtap="onClose">
      <text class="back-icon">‹</text>
    </view>
    <text class="category-name">{{categoryName}}</text>
  </view>

  <!-- 姿势网格 -->
  <scroll-view class="pose-grid-container" style="margin-top: {{headerHeight + 60}}px; height: calc(100vh - {{headerHeight + 60}}px);">
    <view class="pose-grid">
      <view 
        wx:for="{{poses}}" 
        wx:key="id"
        class="pose-item"
      >
        <image 
          class="pose-image" 
          src="{{item.url}}" 
          mode="aspectFill" 
          bindtap="onPoseTap"
          data-pose="{{item}}"
        />
        
        <!-- 收藏按钮（仅登录用户可见） -->
        <view wx:if="{{isLoggedIn}}" class="favorite-btn" catchtap="onToggleFavorite" data-pose="{{item}}">
          <image 
            class="favorite-icon" 
            src="{{favoriteMap[item.id] ? '/images/icons/heart-filled.svg' : '/images/icons/heart.svg'}}" 
            mode="aspectFit" 
          />
        </view>
        
        <view class="pose-overlay">
          <button class="use-btn" catchtap="onUse" data-pose="{{item}}">使用</button>
        </view>
      </view>
    </view>
  </scroll-view>
</view>