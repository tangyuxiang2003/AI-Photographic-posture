.category-detail-container {
  width: 100%;
  min-height: 100vh;
  background: #fff;
  padding-bottom: 140rpx;
}

/* 分类头部 */
.category-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  padding-bottom: 24rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fff;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 2rpx;
}

.back-icon {
  font-size: 56rpx;
  font-weight: 600;
  color: #333;
  line-height: 1;
  transform: scaleX(0.8);
}

.category-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

/* 姿势网格容器 */
.pose-grid-container {
  padding: 0;
}

.pose-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 0 24rpx;
}

/* 姿势卡片 */
.pose-item {
  position: relative;
  width: calc((100% - 16rpx) / 2);
  height: 420rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #f0f0f0;
}

/* 收藏按钮 */
.favorite-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 56rpx;
  height: 56rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  backdrop-filter: blur(8rpx);
  transition: all 0.3s;
}

.favorite-btn:active {
  transform: scale(0.9);
  background: rgba(0, 0, 0, 0.6);
}

.favorite-icon {
  width: 32rpx;
  height: 32rpx;
}

.pose-image {
  width: 100%;
  height: 100%;
}

.pose-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.5), transparent);
}

.use-btn {
  width: 60%;
  background: linear-gradient(135deg, #FFB800 0%, #FFA000 100%);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  padding: 16rpx 0;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(255, 160, 0, 0.3);
}

