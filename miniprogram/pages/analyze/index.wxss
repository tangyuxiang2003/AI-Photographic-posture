page { background: #FFF7FA; }
.analyze-wrap { padding: 24rpx; color: #7A3F60; font-size: 28rpx; }

/* 进度卡片（保留你的星空风格） */
.progress-wrap {
  position: relative;
  display:flex; flex-direction:column; align-items:center; justify-content:center;
  padding: 80rpx 24rpx; gap: 24rpx;
  border-radius: 24rpx;
  overflow: hidden;
  background: transparent;
}
.progress-text { color:#EDEAFF; font-size:30rpx; z-index:3; text-shadow: 0 0 8rpx rgba(198,190,255,.6), 0 0 16rpx rgba(198,190,255,.35); }
.progress-subtext { color:#CFCBFF; font-size:24rpx; opacity:.9; z-index:3; margin-top:-8rpx; text-shadow: 0 0 6rpx rgba(198,190,255,.45); }

/* 星辰正方形容器 */
.star-square {
  position: relative;
  width: 600rpx;
  height: 480rpx;
  margin: 24rpx auto 0;
  border-radius: 24rpx;
  overflow: hidden;
  background: linear-gradient(160deg, #0b1026 0%, #2b1b55 100%);
  display: flex; align-items: center; justify-content: center; flex-direction: column;
}

/* 星辰主题层 */
.stars { position:absolute; left:0; top:0; right:0; bottom:0; pointer-events:none; z-index:1; }
.stars-1 {
  animation: twinkle 3s ease-in-out infinite, drift 14s linear infinite alternate;
  background-image:
    radial-gradient(2px 2px at 20% 30%, rgba(255,255,255,0.95), rgba(255,255,255,0) 60%),
    radial-gradient(2px 2px at 80% 20%, rgba(255,255,255,0.9), rgba(255,255,255,0) 60%),
    radial-gradient(2px 2px at 60% 70%, rgba(255,255,255,0.85), rgba(255,255,255,0) 60%),
    radial-gradient(2px 2px at 35% 80%, rgba(255,255,255,0.8), rgba(255,255,255,0) 60%);
  background-repeat:no-repeat;
}
.stars-2 {
  animation: twinkle 4.2s ease-in-out infinite .6s, drift 18s linear infinite alternate;
  opacity:.7;
  background-image:
    radial-gradient(1.5px 1.5px at 15% 60%, rgba(255,255,255,0.9), rgba(255,255,255,0) 60%),
    radial-gradient(1.5px 1.5px at 75% 65%, rgba(255,255,255,0.85), rgba(255,255,255,0) 60%),
    radial-gradient(1.5px 1.5px at 45% 25%, rgba(255,255,255,0.9), rgba(255,255,255,0) 60%),
    radial-gradient(1.5px 1.5px at 90% 50%, rgba(255,255,255,0.9), rgba(255,255,255,0) 60%);
  background-repeat:no-repeat;
}
@keyframes twinkle { 0%,100% { filter: brightness(0.9); } 50% { filter: brightness(1.3); } }
@keyframes drift { 0% { transform: translateY(0px); } 100% { transform: translateY(-10px); } }

/* 结果网格 */
.grid { display:flex; flex-wrap:wrap; gap: 16rpx; padding: 8rpx; }
.grid-item-wrap { position: relative; width: calc((100% - 32rpx) / 3); height: 220rpx; border-radius: 16rpx; overflow: hidden; }
.grid-item { width: 100%; height: 100%; border-radius: 16rpx; background:#eee; display:block; }

/* 失败提示 */
.empty {
  margin-top: 40rpx; background:#fff; border-radius:16rpx; padding: 40rpx; text-align:center; color:#8C5676;
  border: 2rpx solid #F4D9E1;
}

/* 动画 */
.fade-in { animation: fadeIn 360ms ease-out both; }
@keyframes fadeIn { from { opacity:0; transform: translateY(8rpx);} to { opacity:1; transform: translateY(0);} }

/* —— 继续优化区域 —— */
.refine-card {
  margin-top: 28rpx;
  background: #fff;
  border: 2rpx solid #F4D9E1;
  border-radius: 20rpx;
  padding: 20rpx;
}
.refine-title {
  color: #7A3F60;
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}
.refine-textarea {
  min-height: 160rpx;
  border: 2rpx solid #F4D9E1;
  border-radius: 16rpx;
  padding: 16rpx;
  color: #7A3F60;
  background: #fff;
}
.refine-actions {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
.refine-btn {
  background: #ff8eb5;
  color: #fff;
  border: none;
  border-radius: 24rpx;
  padding: 16rpx 32rpx;
}
.refine-btn--disabled,
.refine-btn[disabled] {
  background: #ffd1e1;
  color: rgba(255,255,255,0.7);
}

/* 生成完成反馈 */
.feedback-bubble {
  margin: 16rpx 0 8rpx;
  background: #ffffff;
  color: #8C5676;
  border: 2rpx solid #F4D9E1;
  border-radius: 20rpx;
  padding: 20rpx;
  line-height: 1.6;
  box-shadow: 0 6rpx 16rpx rgba(236,72,153,0.06);
}

/* 收藏按钮 */
.fav-btn {
  position: absolute;
  right: 8rpx;
  top: 8rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.9);
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.08);
}
.fav-btn::before {
  content: '★';
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-52%);
  font-size: 28rpx;
  line-height: 1;
  color: #D9D9D9; /* 未收藏：灰色星星 */
}
.fav--active { background: rgba(255, 224, 102, 0.25); } /* 激活时浅黄底 */
.fav--active::before { color: #FFC107; } /* 收藏：亮黄色星星 */